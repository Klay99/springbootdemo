<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wenli.springbootdemo.dao.UserDao">

    <!-- 动态多条件查询 -->
    <select id="getAllUser" parameterType="User" resultType="User">
        SELECT * FROM `user`
        <where>
            <if test=" id !=null and id !='' ">
                and id=#{id}
            </if>

            <if test=" username !=null and username !='' ">
                and username=#{username}
            </if>

            <if test=" password !=null and password !='' ">
                and password=#{password}
            </if>

            <if test=" roleId !=null and roleId !='' ">
                and roleId=#{roleId}
            </if>

            <if test=" email !=null and email !='' ">
                and email=#{email}
            </if>

            <if test=" isActive !=null and isActive !='' ">
                and isActive=#{isActive}
            </if>

            <if test=" shippingAddress !=null and shippingAddress !='' ">
                and shippingAddress=#{shippingAddress}
            </if>

            <if test=" headImg !=null and headImg !='' ">
                and headImg=#{headImg}
            </if>
        </where>
    </select>

    <select id="getUserById" parameterType="int" resultType="User">
        select * from `user` where id=#{id}
    </select>

    <select id="login" parameterType="User" resultType="User">
        select * from user where username=#{username} and password=#{password}
    </select>

    <insert parameterType="User" id="addUser">
        insert into `user`
        <trim prefix="(" suffix=")" suffixOverrides=",">

            <if test=" username !=null and username !='' ">
                username,
            </if>

            <if test=" password !=null and password !='' ">
                password,
            </if>

            <if test=" roleId !=null and roleId !='' ">
                roleId,
            </if>

            <if test=" email !=null and email !='' ">
                email,
            </if>

            <if test=" isActive !=null and isActive !='' ">
                isActive,
            </if>

            <if test=" shippingAddress !=null and shippingAddress !='' ">
                shippingAddress,
            </if>

            <if test=" headImg !=null and headImg !='' ">
                headImg,
            </if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">

            <if test=" username !=null and username !='' ">
                #{username},
            </if>

            <if test=" password !=null and password !='' ">
                #{password},
            </if>

            <if test=" roleId !=null and roleId !='' ">
                #{roleId},
            </if>

            <if test=" email !=null and email !='' ">
                #{email},
            </if>

            <if test=" isActive !=null and isActive !='' ">
                #{isActive},
            </if>

            <if test=" shippingAddress !=null and shippingAddress !='' ">
                #{shippingAddress},
            </if>

            <if test=" headImg !=null and headImg !='' ">
                #{headImg},
            </if>
        </trim>

        <selectKey resultType="int" keyProperty="id" order="AFTER">
            select LAST_INSERT_ID()
        </selectKey>

    </insert>


    <update parameterType="User" id="updateUser">
        update user set

        <trim suffixOverrides=",">
            <if test=" id !=null and id !='' ">
                id=#{id},
            </if>

            <if test=" username !=null and username !='' ">
                username=#{username},
            </if>

            <if test=" password !=null and password !='' ">
                password=#{password},
            </if>

            <if test=" roleId !=null and roleId !='' ">
                roleId=#{roleId},
            </if>

            <if test=" email !=null and email !='' ">
                email=#{email},
            </if>

            <if test=" isActive !=null and isActive !='' ">
                isActive=#{isActive},
            </if>

            <if test=" shippingAddress !=null and shippingAddress !='' ">
                shippingAddress=#{shippingAddress},
            </if>

            <if test=" headImg !=null and headImg !='' ">
                headImg=#{headImg},
            </if>
        </trim>
        where id=#{id}

    </update>

    <delete id="deleteUserById" parameterType="int">

        delete from user where id=#{id}

    </delete>


</mapper>